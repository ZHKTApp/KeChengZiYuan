<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="166dp"
        android:layout_height="287dp"
        android:background="@color/white"
        android:padding="7dp">
        <ImageView
        android:id="@+id/iv_item_ebook_img"
        android:layout_width="152dp"
        android:layout_height="217dp"
        android:background="@mipmap/textbook" />

        <TextView
            android:id="@+id/tv_item_ebook_name"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_ebook_img"
            android:layout_marginTop="@dimen/common_margin_5dp"
            android:text="高一数学"
            android:textColor="@color/gray_3333"
            android:textSize="@dimen/textsize_13sp" />

        <ImageView
            android:id="@+id/iv_item_ebook_cellect"
            android:layout_width="@dimen/common_margin_24dp"
            android:layout_height="@dimen/common_margin_24dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_item_ebook_name"
            android:layout_marginTop="11dp"
            android:background="@drawable/drawable_cellet_bg" />

        <TextView
            android:id="@+id/tv_item_ebook_down"
            android:layout_width="80dp"
            android:layout_height="@dimen/common_margin_27dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/drawable_down_bg"
            android:gravity="center"
            android:text="下载"
            android:textColor="@color/white" />

        <com.zwyl.course.util.MyProgress
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="87dp"
            android:layout_height="@dimen/common_margin_27dp"
            android:max="100"
            android:progressDrawable="@drawable/drawable_progressbar"
            android:visibility="gone"  />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_play"
        android:layout_width="@dimen/common_margin_20dp"
        android:layout_height="@dimen/common_margin_40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:background="@mipmap/selecte" />
</RelativeLayout>